@using Abp.Web.Mvc.Extensions
@model DogeDaycare.Web.Models.Account.RegisterViewModel
@section Scripts
{
    @Html.IncludeScript("~/Views/Account/Register.js")
}
<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div class="container" style="margin-top:30px">
        <div id="RegisterArea" class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <div class="well bs-component">
                    <form id="registerForm" class="form-horizontal" action="@(Url.Action("Register","Account"))" method="POST">
                        <fieldset>
                            <legend>@L("Register")</legend>
                            @Html.AntiForgeryToken()
                            @if (@ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">
                                    <i class="fa fa-warning"></i> @ViewBag.ErrorMessage
                                </div>
                            }

                            <input type="hidden" name="IsExternalLogin" value="@Model.IsExternalLogin.ToString()" />

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label for="firstName">@L("Name")</label>
                                    <input id="firstName"
                                           name="firstName"
                                           value="@Model.FirstName"
                                           maxlength="@DogeDaycare.Users.User.MaxNameLength"
                                           type="text"
                                           class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label for="surName">@L("Surname")</label>
                                    <input id="surName"
                                           name="surName"
                                           value="@Model.Surname"
                                           maxlength="@DogeDaycare.Users.User.MaxSurnameLength"
                                           type="text"
                                           class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label for="emailAddress">@L("EmailAddress")</label>
                                    <input id="emailAddress"
                                           name="emailAddress"
                                           value="@Model.EmailAddress"
                                           maxlength="@DogeDaycare.Users.User.MaxEmailAddressLength"
                                           type="email"
                                           class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label for="userName">@L("UserName")</label>
                                    <input id="userName"
                                           name="userName"
                                           value="@Model.UserName"
                                           maxlength="@DogeDaycare.Users.User.MaxUserNameLength"
                                           type="text"
                                           class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label for="password">@L("Password")</label>
                                    <input id="password"
                                           name="password"
                                           value="@Model.Password"
                                           minlength="@DogeDaycare.Users.User.MinPlainPasswordLength"
                                           maxlength="@DogeDaycare.Users.User.MaxPlainPasswordLength"
                                           type="password"
                                           class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label for="passwordConfirm">@L("ConfirmPassword")</label>
                                    <input id="passwordConfirm"
                                           name="passwordConfirm"
                                           value="@Model.PasswordConfirm"
                                           minlength="@DogeDaycare.Users.User.MinPlainPasswordLength"
                                           maxlength="@DogeDaycare.Users.User.MaxPlainPasswordLength"
                                           type="password"
                                           class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <div class="btn-group btn-group-justified" role="group">
                                        <div class="btn-group">
                                            <button id="RegisterButton"
                                                    type="submit"
                                                    class="btn btn-primary">
                                                <i class="fa fa-sign-in"></i> @L("Register")
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 text-center">
                                <a href="@Url.Action("Login", "Account")">Need to Login?</a>
                            </div>
                        </fieldset>
                    </form>
        
                </div>
            </div>
        </div>
    </div>
</body>
</html>