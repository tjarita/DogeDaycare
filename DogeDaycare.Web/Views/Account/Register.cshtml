    {
        <link href="~/Views/Account/Login.css" rel="stylesheet" />
    }*@
@section Scripts
{
    @Html.IncludeScript("~/Views/Account/Register.js")
}
<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register Your DogeDaycare Account</title>
</head>
<body>
    <div class="container" style="margin-top:30px">
        <div id="RegisterArea" class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <div class="well bs-component">
                    <form id="RegisterForm" class="form-horizontal" action="@(Url.Action("Register","Account"))" method="POST">
                        <fieldset>
                            <legend>@L("Register")</legend>

                            @if (@ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">
                                    <i class="fa fa-warning"></i> @ViewBag.ErrorMessage
                                </div>
                            }

                            @if (ViewBag.IsMultiTenancyEnabled)
                            {
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <input type="text" class="form-control" name="TenancyName" placeholder="@L("TenancyName")" value="@Model.TenancyName" required maxlength="@DogeDaycare.MultiTenancy.Tenant.MaxTenancyNameLength">
                                    </div>
                                </div>
                            }

                            <input type="hidden" name="IsExternalLogin" value="@Model.IsExternalLogin.ToString()" />

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input name="First Name"
                                           value="@Model.Name"
                                           placeholder="@L("Name")"
                                           required maxlength="@DogeDaycare.Users.User.MaxNameLength"
                                           type="text"
                                           class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input name="Last Name"
                                           value="@Model.Surname"
                                           placeholder="@L("Surname")"
                                           required maxlength="@DogeDaycare.Users.User.MaxSurnameLength"
                                           type="text"
                                           class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input 
                                           name="EmailAddress" 
                                           value="@Model.EmailAddress" 
                                           placeholder="@L("EmailAddress")" 
                                           required maxlength="@DogeDaycare.Users.User.MaxEmailAddressLength"
                                           type="email" 
                                           class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input name="UserName" 
                                           value="@Model.UserName" 
                                           placeholder="@L("UserName")" 
                                           required maxlength="@DogeDaycare.Users.User.MaxUserNameLength"
                                           type="text" 
                                           class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input name="Password" 
                                           value="@Model.Password"
                                           placeholder="@L("Password")" 
                                           required maxlength="@DogeDaycare.Users.User.MaxPlainPasswordLength"
                                           type="password" 
                                           class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input name="PasswordConfirm" 
                                           value="@Model.PasswordConfirm"
                                           placeholder="@L("ConfirmPassword")" 
                                           required maxlength="@DogeDaycare.Users.User.MaxPlainPasswordLength"
                                           type="password" 
                                           class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <div class="btn-group btn-group-justified" role="group">
                                        <div class="btn-group">
                                            <button type="submit" id="RegisterButton" class="btn btn-primary"><i class="fa fa-sign-in"></i> @L("Register")</button>
                                        </div>
                                        <div class="btn-group">
                                            <a class="btn btn-success" href="@Url.Action("Login", "Account")" role="button"><i class="fa fa-sign-in"></i> @L("LogIn")</a>
                                        </div>
                                    </div>
                                </div>
                                @*<button type="button" id="LoginButton" class="btn btn-info">@L("LogIn")</button>*@
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>