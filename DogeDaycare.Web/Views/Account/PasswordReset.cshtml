@model DogeDaycare.Web.Models.Account.PasswordResetViewModel
@section Styles
{
    <link href="~/Views/Account/Login.css" rel="stylesheet" />
}
@*Receives a password reset token and allows for setting a new password.*@
<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div class="container" style="margin-top:30px">
        <div id="RegisterArea" class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <div class="well bs-component">
                    <form class="form-horizontal" action="@(Url.Action("PasswordReset","Account"))" method="POST">
                        <fieldset>
                            <legend>@L("PasswordReset")</legend>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="password" class="form-control" name="Password" value="@Model.Password" placeholder="@L("Password")" required maxlength="@DogeDaycare.Users.User.MaxPlainPasswordLength">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="password" class="form-control" name="ConfirmationPassword" value="@Model.ConfirmationPassword" placeholder="@L("Password")" required maxlength="@DogeDaycare.Users.User.MaxPlainPasswordLength">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <button type="submit" id="ResetButton" class="btn btn-primary"><i class="fa fa-key"></i> @L("Reset")</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

