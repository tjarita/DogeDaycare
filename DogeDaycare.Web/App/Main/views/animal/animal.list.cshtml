<div class="container-fluid" ng-controller="app.views.animal.search as vm">
    <div class="row">
        <h3 class="panel-title" style="margin-bottom:10px">
            Animal Search
        </h3>
    </div>
    <div class="row">
        <form id="AnimalSearchForm" class="form-horizontal">
            <div class="form-group form-group-sm">
                <label for="AnimalName" class="col-md-2 control-label">Animal Name</label>
                <div class="col-md-8">
                    <input id="AnimalName" ng-disabled="AnimalNameCheck" type="text" class="form-control" placeholder="Animal Name" />
                </div>
                <div class="checkbox-inline">
                    <label>
                        <input id="AnimalSearch" type="checkbox" value="" ng-model="AnimalNameCheck"/> Use
                    </label>
                </div>
            </div>

            <div class="form-group form-group-sm">
                <label for="OwnerName" class="col-md-2 control-label">Owner Name</label>
                <div class="col-md-8">
                    <input id="OwnerName" ng-disabled="OwnerNameCheck" type="text" class="form-control" placeholder="Owner Name" />
                </div>
                <div class="checkbox-inline">
                    <label>
                        <input id="OwnerSearch" type="checkbox" value="" ng-model="OwnerNameCheck"/> Use
                    </label>
                </div>
            </div>

            <div class="col-md-2 col-md-offset-5">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>

        </form>
    </div>
</div>