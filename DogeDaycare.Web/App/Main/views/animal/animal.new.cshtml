<div class="container-fluid" ng-controller="app.views.animal.new as vm">
    <div class="row">
        <h3 class="panel-title" style="margin-bottom:10px">
            New Animal Registration
        </h3>
    </div>
    <div class="row">
        <form id="NewAnimalForm" class="form-horizontal">
            <div class="form-group">
                <div class="col-md-2">
                    <label for="AnimalName" class="control-label">Animal Name</label>
                </div>
                <div class="col-md-10">
                    <input ng-model="vm.animal.name" type="text" class="form-control" id="AnimalName" placeholder="Name" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <label for="AssignedOwner" class="control-label">Select Owner</label>
                </div>
                <div class="col-md-10">
                    <select id="AssignedOwner" class="form-control" ng-model="vm.animal.owner.id" ng-options="person.id as person.name for person in vm.persons"></select>
                </div>
            </div>
            <div class="col-md-2 col-md-offset-5">
                <button ng-click="vm.saveAnimal()" type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>

</div>

