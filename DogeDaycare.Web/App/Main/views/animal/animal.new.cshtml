<div class="container-fluid" ng-controller="app.views.animal.new as vm">
    <div class="row">
        <h3 class="panel-title" style="margin-bottom:10px">
            New Animal Registration
        </h3>
    </div>
    <div class="row">
        <form id="NewAnimalForm" class="form-horizontal">

            <div class="form-group form-group-sm">
                <label for="AnimalName" class="col-md-2 control-label">Name</label>
                <div class="col-md-10">
                    <input ng-model="vm.animal.name" type="text" class="form-control" id="AnimalName" placeholder="Animal Name" />
                </div>
            </div>

            <div class="form-group form-group-sm">
                <label for="AssignedOwner" class="col-md-2 control-label">Owner</label>
                <div class="col-md-10">
                    <select ng-model="vm.animal.IdOwner" ng-options="person.id as person.name for person in vm.persons" multiple="multiple" id="AssignedOwner" class="form-control" ></select>
                </div>
            </div>

            <div class="col-md-2 col-md-offset-5">
                <button ng-click="vm.saveAnimal()" type="submit" class="btn btn-primary">Register</button>
            </div>

        </form>
    </div>

</div>

