<div class="container-fluid" ng-controller="app.views.animal.new as vm">
    <div class="row">
        <h3 class="panel-title" >
            New Animal Registration
        </h3>

        <form class="form-horizontal">
            <div class="form-group">
                <label for="AnimalName" class="col-sm-2 control-label">Animal Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="AnimalName" placeholder="Name" />
                </div>
            </div>
            <div class="form-group">
                <label for="OwnerName" class="col-sm-2 control-label">Owner Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="OwnerName" placeholder="Name" />
                </div>
            </div>

        </form>
    </div>
</div>

